@model List<CheeseMVC.Models.Cheese>

<h1>Cheeses</h1>
<br />

<table class="table" style="width:90%">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
        <th>[remove]</th>
    </tr>

    @if (Model.Count == 0)
    {
        <tr><td>Where did all the cheese go?</td></tr>
    }
    else
    {
        @foreach (var cheese in Model)
        {
            <tr>
                <td>@cheese.Name</td>
                <td>@cheese.Description</td>
                <td>@cheese.Category.Name</td>
                <td>
                    <form method="post">
                        <input type="hidden" name="cheeseID" id="@cheese.ID" value="@cheese.ID" />
                        <button type="submit" class="btn btn-danger btn-xs">[ - ]</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a> | 
    <a asp-controller="Cheese" asp-action="Remove">Remove Cheese</a></p>
