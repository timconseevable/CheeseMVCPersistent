@model List<CheeseMVC.Models.Menu>;

<h1>Menus</h1>
<br />
@if (Model.Count == 0)
{
    <p>There seem to be no menus yet...</p>
}

<ul class="list-group" style="width:70%">
    @foreach (var menu in Model)
    {
        <li class="list-group-item">
        <a asp-controller="Menu" asp-action="ViewMenu" asp-route-id="@menu.ID">@menu.Name</a></li>
    }
</ul>

<p><a asp-controller="Menu" asp-action="Add">Add a Menu</a></p>