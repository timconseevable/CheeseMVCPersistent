@model List<CheeseMVC.Models.Menu>;

<h1>Menus</h1>
<br />
@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}

<ul>
    @foreach (var menu in Model)
    {
        <li><a asp-controller="Menu" asp-action="ViewMenu" asp-route="@menu.ID">@menu.Name</a></li>
    }

</ul>

<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>